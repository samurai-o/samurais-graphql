// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// 用户信息
model user {
  id      String    @id @default(uuid())
  info    String?
  account account[]

  personnel personnel[]
  developer developer[]
  @@index([id])
}

// 账号
model account {
  id       String   @id @default(uuid())
  email    String
  password String
  createAt DateTime @default(now())
  updateAt DateTime @default(now())
  user     user     @relation(fields: [userId], references: [id])
  userId   String


  @@index([email, id])
}

// 系统code
model systemcode {
  id   String @id @default(uuid())
  type String
  code String
  name String
}

// 组织xinxi
model organazition {
  id       String @id @default(uuid())
  // 名称
  name     String
  // 描述
  describe String

  personnel personnel[]
  pkg       packages[]
  @@index([id, name])
}

// 组织人员
model personnel {
  id             String       @id @default(uuid())
  user           user         @relation(fields: [userId], references: [id])
  userId         String
  organazition   organazition @relation(fields: [organazitionId], references: [id])
  organazitionId String
}

// 包基础信息
model packages {
  id             String        @id @default(uuid())
  name           String
  // 描述
  describe       String
  createAt       DateTime      @default(now())
  updateAt       DateTime      @default(now())
  organazition   organazition? @relation(fields: [organazitionId], references: [id])
  organazitionId String?

  developer developer[]
  @@index([id, name, organazitionId])
}

model developer {
  id        String   @id @default(uuid())
  type      Int // 账号类型
  user      user     @relation(fields: [userId], references: [id])
  userId    String
  package   packages @relation(fields: [packageId], references: [id])
  packageId String

  @@index([id])
}
